---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  variant?: 'default' | 'bordered'
}

const { variant = 'default', class: className = '', ...rest } = Astro.props
---

<div
  class:list={[
    'rounded-xl p-6',
    variant === 'bordered' && 'border',
    className
  ]}
  {...rest}
>
  <slot />
</div>
