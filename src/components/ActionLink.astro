---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  href: string
  variant: 'instagram' | 'tiktok' | 'email' | 'phone' | 'payment' | 'language'
  external?: boolean
}

const {
  href,
  variant,
  external = false,
  class: className = '',
  ...rest
} = Astro.props

const variantClasses = {
  email:
    'dark:from-orange-600 dark:to-red-600 from-orange-500 to-red-500 dark:hover:shadow-orange-500/50',
  instagram:
    'dark:from-pink-600 dark:to-purple-600 from-pink-500 to-purple-500 dark:hover:shadow-pink-500/50',
  language:
    'dark:from-cyan-500 dark:to-pink-500 from-cyan-400 to-pink-400 dark:hover:shadow-cyan-500/50',
  payment:
    'dark:from-yellow-600 dark:to-orange-600 from-yellow-500 to-orange-500 dark:hover:shadow-yellow-500/50',
  phone:
    'dark:from-purple-600 dark:to-pink-600 from-purple-500 to-pink-500 dark:hover:shadow-purple-500/50',
  tiktok:
    'dark:from-cyan-600 dark:to-blue-600 from-cyan-500 to-blue-500 dark:hover:shadow-cyan-500/50'
}
---

<a
  href={href}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
  class:list={[
    'block w-full p-4 rounded-xl transition-all transform hover:scale-105 text-white',
    'bg-gradient-to-r hover:shadow-lg',
    variantClasses[variant],
    className
  ]}
  {...rest}
>
  <div class="flex items-center justify-center gap-3">
    <slot />
  </div>
</a>
